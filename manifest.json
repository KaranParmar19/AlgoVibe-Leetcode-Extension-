{
    "manifest_version": 3,
    "name": "AlgoVibes",
    "version": "1.0",
    "description": "Plays GTA Mission Passed/Wasted on LeetCode submission results.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://leetcode.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://leetcode.com/problems/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*"
            ],
            "matches": [
                "https://leetcode.com/*"
            ]
        }
    ]
}